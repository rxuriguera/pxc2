<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/appBgColor" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:orientation="vertical">
	<LinearLayout android:id="@+id/searchLayout" android:layout_margin="@dimen/layoutMargin" android:layout_width="fill_parent" android:layout_height="wrap_content">



		<EditText android:id="@+id/searchEditText" android:hint="@string/searchLabel" android:layout_width="fill_parent" android:lines="1" android:layout_weight="0.4" android:layout_height="fill_parent">
    

		</EditText>
		
		<Button android:text="@string/searchLabel" android:id="@+id/searchButton" android:layout_width="fill_parent" android:layout_weight="1" android:onClick="searchClicked" android:layout_height="fill_parent"></Button>


	
</LinearLayout><ListView android:layout_width="fill_parent" android:id="@+id/resultsListView" android:layout_height="fill_parent" android:layout_margin="@dimen/layoutMargin"></ListView>

</LinearLayout>
